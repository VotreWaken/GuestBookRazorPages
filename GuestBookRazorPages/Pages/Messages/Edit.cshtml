@page
@model GuestBookRazorPages.Pages.Messages.EditModel

@{
    ViewData["Title"] = "Edit";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Messages.Id" />
            <div class="form-group">
                <label asp-for="Messages.Mesage" class="control-label"></label>
                <input asp-for="Messages.Mesage" class="form-control" />
                <span asp-validation-for="Messages.Mesage" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Messages.UserId" class="control-label"></label>
                <select asp-for="Messages.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Messages.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Messages/IndexUserMessages">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}